{
  "name": "trailhead",
  "version": "1.0.0",
  "description": "Source code for Brett Barlow's Trailhead challenges.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thebrettbarlow/trailhead.git"
  },
  "homepage": "https://github.com/thebrettbarlow/trailhead#readme",
  "bugs": {
    "url": "https://github.com/thebrettbarlow/trailhead/issues"
  },
  "scripts": {
    "format": "prettier --write . && eslint --no-error-on-unmatched-pattern . --fix",
    "lint": "prettier --check . && eslint --no-error-on-unmatched-pattern .",
    "prepare": "husky",
    "sf:auth": "./scripts/connect_to_org.sh",
    "sf:create:scratch": "./scripts/make_scratch_org.sh",
    "sf:deploy": "sf project deploy start --source-dir=force-app --concise --ignore-conflicts",
    "sf:install:3p:packages": "./scripts/install-packages.sh target-org 3p",
    "sf:module:temp:test:list": "./scripts/apex-test-operator.sh target-org target-org list",
    "sf:module:temp:test:run": "./scripts/apex-test-operator.sh target-org target-org run",
    "sf:open": "sf org open --path=lightning",
    "sf:open:setup": "sf org open --path=lightning/setup/SetupOneHome/home",
    "sf:password:create": "sf org generate password",
    "sf:password:get": "sf org display user",
    "sf:trail:dev:beginner:data:export": "./scripts/export_data.sh dev/beginner",
    "sf:trail:dev:beginner:data:import": "./scripts/import_data.sh dev/beginner",
    "sf:trail:dev:beginner:deploy": "./scripts/deploy_manifest.sh dev/beginner",
    "sf:trail:dev:beginner:install:packages": "./scripts/install_packages.sh dev/beginner",
    "sf:trail:dev:beginner:manifest": "./scripts/update_manifest.sh dev/beginner",
    "sf:trail:dev:beginner:retrieve": "./scripts/retrieve_manifest.sh dev/beginner",
    "sf:validate": "sf project deploy start --source-dir=force-app --concise --ignore-conflicts --dry-run",
    "test": "sf apex test run --test-level=RunLocalTests --wait=10"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@locker/eslint-config-locker": "^0.21.6",
    "@lwc/eslint-plugin-lwc": "^2.0.0",
    "@oclif/core": "^3.26.4",
    "@prettier/plugin-xml": "^3.2.2",
    "@salesforce/core": "^8.8.2",
    "@salesforce/dev-config": "^4.1.0",
    "@salesforce/eslint-config-lwc": "^3.7.0",
    "@salesforce/eslint-plugin-lightning": "^1.0.0",
    "@salesforce/sfdx-lwc-jest": "^3.1.0",
    "ajv": "^8.12.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.5.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.1.1",
    "prettier-plugin-apex": "^2.0.1",
    "prettier-plugin-pkg": "^0.18.0",
    "prettier-plugin-sh": "^0.13.1",
    "prettier-plugin-sql": "^0.18.1",
    "xml2js": "^0.6.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*": [
      "prettier --write"
    ],
    ".js": "eslint --fix"
  }
}
